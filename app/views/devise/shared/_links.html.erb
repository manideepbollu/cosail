<p class="text-muted text-center loginlayout-bluetext"><small>Want to explore other options?</small></p>
<div class="row">
  <div class="col-sm-5 p-xxs">
    <%- if controller_name != 'sessions' %>
        <%= link_to "Login", new_session_path(resource_name), class: 'btn btn-sm btn-primary btn-block' %><br />
    <% end -%>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Register", new_registration_path(resource_name), class: 'btn btn-sm btn-info btn-block' %><br />
    <% end -%>
  </div>
  <div class="col-sm-7 p-xxs">
      <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to raw("<span class='fa fa-facebook-square'></span> Login with #{provider.to_s.titleize}"), omniauth_authorize_path(resource_name, provider), class: 'btn btn-sm btn-fb-login btn-block' %><br />
          <% end -%>
      <% end -%>
  </div>
</div>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot password?", new_password_path(resource_name), class: 'text-muted' %> |
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Request confirmation", new_confirmation_path(resource_name), class: 'text-muted' %> |
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "User locked?", new_unlock_path(resource_name), class: 'text-muted' %>
<% end -%>
<br>
